@using TpPizza.Web.ViewModels
@model TpPizza.Web.ViewModels.PizzaFormViewModel

@{
    ViewData["Title"] = "Create";
    var pates = ViewData["Pates"] as List<PateViewModel> ?? new List<PateViewModel>();
    var patesItems = pates.Select(p => new SelectListItem { Text = p.Nom, Value = p.Id.ToString() });
    var ingredients = ViewData["Ingredients"] as List<IngredientViewModel> ?? new List<IngredientViewModel>();
    var ingredientsItems = ingredients.Select(i => new SelectListItem { Text = i.Nom, Value = i.Id.ToString() });

}

@*@foreach (var item in ViewData["PhotoList"]*@

<h1>Create</h1>

<h4>PizzaViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PateId" class="control-label"></label>
                <select id="drpEmpList" class="form-control" asp-for="PateId" asp-items="@patesItems">
                    <option value="">--Select--</option>
                </select>
                <span asp-validation-for="PateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IngredientsId" class="control-label"></label>
                <select id="drpEmpList" class="form-control" asp-for="IngredientsId" asp-items="@ingredientsItems">
                    <option value="">--Select--</option>
                </select>
                <span asp-validation-for="IngredientsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
